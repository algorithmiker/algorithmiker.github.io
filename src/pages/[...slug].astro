---
import { getCollection, render, type CollectionEntry} from 'astro:content';
import Blog from '../layouts/Blog.astro';
import Date from '../utils/Date.astro';
export async function getStaticPaths() {
	const posts = await getCollection('posts');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'posts'>;

const entry = Astro.props;
const { Content } = await render(entry);
---

<Blog title={entry.data.title} description={entry.data.description}>
  <div class="my-2">
  <h1>{entry.data.title}</h1>
		<p class="my-0" >Published on <Date date={entry.data.pubDate}/></p>
		{ entry.data.updatedDate != null && <p class="my-0">Updated on <Date date={entry.data.updatedDate} /></p>}
  </div>
  <Content />
</Blog>
